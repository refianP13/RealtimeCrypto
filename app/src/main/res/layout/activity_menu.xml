<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".activity.Menu">
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="39dp"

        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Welcome Guest !!!"
        android:textAlignment="center"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/portofolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shadow"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/tabel"
            android:layout_width="330dp"
            android:layout_height="190dp"
            android:background="@drawable/crypto"
            android:text="LIHAT TABEL" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="CHECK TABEL"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portofolio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shadow"
        android:elevation="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/profilPas"
            android:layout_width="155dp"
            android:layout_height="215dp"
            android:background="@drawable/profil"
            android:text="LIHAT TABEL" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="PROFIL"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portofolio"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/profile"
        android:background="@drawable/shadow"
        android:elevation="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/settingImage"
            android:layout_width="155dp"
            android:layout_height="215dp"
            android:background="@drawable/getstarted"
            android:text="LIHAT TABEL" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="App Setting"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/footer"
        android:background="#E8E7E7" />
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/logout"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_login_24" />
    </LinearLayout>


</RelativeLayout>